@model EpiManagement.Web.Models.EpiFilterViewModel

@{
    ViewData["Title"] = "Gerenciamento de EPIs";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">@ViewData["Title"]</h1>
                <div>
                    <a asp-action="Dashboard" class="btn btn-info me-2">
                        <i class="fas fa-chart-bar"></i> Dashboard
                    </a>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Novo EPI
                    </a>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Filtros -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Filtros</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="get">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Nome" class="form-label">Nome</label>
                                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome do EPI" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="CA" class="form-label">CA</label>
                                    <input asp-for="CA" class="form-control" placeholder="Digite o número do CA" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">&nbsp;</label>
                                    <div class="d-grid gap-2 d-md-flex">
                                        <button type="submit" class="btn btn-outline-primary">
                                            <i class="fas fa-search"></i> Filtrar
                                        </button>
                                        <a asp-action="Index" class="btn btn-outline-secondary">
                                            <i class="fas fa-times"></i> Limpar
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Lista de EPIs -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">EPIs Cadastrados (@Model.Epis.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Epis.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Nome</th>
                                        <th>CA</th>
                                        <th>Categoria</th>
                                        <th>Validade</th>
                                        <th>Status</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var epi in Model.Epis)
                                    {
                                        <tr>
                                            <td>@epi.Nome</td>
                                            <td>@epi.CA</td>
                                            <td>@epi.Categoria</td>
                                            <td>@epi.Validade.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @if (epi.EstaVencido)
                                                {
                                                    <span class="badge bg-danger">Vencido</span>
                                                }
                                                else if (epi.ProximoDoVencimento)
                                                {
                                                    <span class="badge bg-warning text-dark">Próximo do Vencimento</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">Válido</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@epi.Id" class="btn btn-sm btn-outline-info" title="Detalhes">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@epi.Id" class="btn btn-sm btn-outline-warning" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@epi.Id" class="btn btn-sm btn-outline-danger" title="Excluir">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-hard-hat fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Nenhum EPI encontrado</h5>
                            <p class="text-muted">Comece criando seu primeiro EPI ou ajuste os filtros de busca.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Criar Primeiro EPI
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}

